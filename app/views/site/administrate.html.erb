<%= javascript_include_tag params[:action] %>

<div class="block span-100">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>

		<h2>Organizations &amp; People</h2>
    
    <form action="" method="post">
      <input type="text" class="text" value="Search" />
    </form>
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
    <div id="accordion_0">
  		<% @ous.each do |ou| %>
        <h4><a href="#"><%= ou.name %></a></h4>
          <div id="accordion_1">
          		<% ou.children.each do |o| %>
                <h5><a href="#"><%= o.name %></a></h5>
                <div id="accordion_2" class="alt-jui-theme">
                  <% o.members.sort_by { |x| x.last }.each do |person| %>
                    <h5><a href="#"><%= person.name %></a></h5>
                    <div data-entity-id="<%= person.id %>"></div>
                  <% end %>
                </div>
          		<% end %>
          </div>
  		<% end %>
    </div>
	</div>		<!-- .block_content ends -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>

<div class="block span-100">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>

		<h2>Applications</h2>
    
    <form action="" method="post">
      <input type="text" class="text" value="Search" />
    </form>
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
    <table>
    <% @applications.each do |app| %>
      <tr>
        <td><%= app.name %></td>
      </tr>
    <% end %>
    </table>
	</div>		<!-- .block_content ends -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>

<div class="block span-100">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>

		<h2>Templates</h2>
	</div>		<!-- .block_head ends -->
	
	<div class="block_content">
    
	</div>		<!-- .block_content ends -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div>
