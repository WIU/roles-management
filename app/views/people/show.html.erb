<% if notice %>
<div class="message success"><p><%= notice %></p></div>
<% end %>

<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2><%= @person.preferred_name %></h2>
		
		<ul class="tabs">
			<li><a href="#overview_tab">Overview</a></li>
			<li><a href="#revisions_tab">Revisions</a></li>
		</ul>
	</div> <!-- .block_head -->
	
	<div class="block_content tab_content" id="overview_tab">
		<p>
		  <b>First:</b>
		  <%= @person.first %>
		</p>

		<p>
		  <b>Last:</b>
		  <%= @person.last %>
		</p>

		<p>
		  <b>Email:</b>
		  <%= mail_to @person.email, @person.email, :encode => "javascript" %>
		</p>

		<p>
		  <b>Kerberos ID:</b>
		  <%= @person.loginid %>
		</p>

		<p>
		  <b>Status:</b>
		  <% if @person.status %>
		    Active
		  <% else %>
		    Inactive
		  <% end %>
		</p>

		<p>
		  <b>Phone:</b>
		  <% if @person.phone != nil and @person.phone.length > 0 %>
		    <%= number_to_phone @person.phone, :area_code => true %>
		  <% end %>
		</p>

		<p>
		  <b>Address:</b>
		  <%= @person.address %>
		</p>
		
		<h2>Roles</h2>
		<ul>
			
		</ul>
		
		<h2>Group Memberships</h2>
		<ul>
		<% for g in @person.groups %>
			<li><%= link_to g.name, g %>
				<% if g.manager_id == @person.id %>
					(Manager)
				<% end %>
			</li>
		<% end %>
		</ul>
		
		<%= link_to 'Edit', edit_person_path(@person) %> |
		<%= link_to 'Back', people_path %>
	</div> <!-- .block_content -->

	<div class="block_content tab_content" id="revisions_tab">

	</div> <!-- .block_content -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div> <!-- .block -->
