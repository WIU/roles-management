<p id="notice"><%= notice %></p>

<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2><%= @person.preferred_name %></h2>
	</div> <!-- .block_head -->
	
	<div class="block_content">
		<p>
		  <b>First:</b>
		  <%= @person.first %>
		</p>

		<p>
		  <b>Last:</b>
		  <%= @person.last %>
		</p>

		<p>
		  <b>Email:</b>
		  <%= @person.email %>
		</p>

		<p>
		  <b>Kerberos ID:</b>
		  <%= @person.loginid %>
		</p>

		<p>
		  <b>Status:</b>
		  <%= @person.status %>
		</p>

		<p>
		  <b>Phone:</b>
		  <%= @person.phone %>
		</p>

		<p>
		  <b>Address:</b>
		  <%= @person.address %>
		</p>
		
		<p>
		  <b>Title:</b>
		  <%= @person.title.name %>
		</p>
		
		<p>
		  <b>Affiliation:</b>
		  <%= @person.affiliation.name %>
		</p>
		
		<h3>Group Memberships</h3>
		<ul>
		<% for g in @person.groups %>
			<li><%= link_to g.name, g %></li>
		<% end %>
		</ul>
		
		<%= link_to 'Edit', edit_person_path(@person) %> |
		<%= link_to 'Back', people_path %>
	</div> <!-- .block_content -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div> <!-- .block -->
