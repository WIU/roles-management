<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>People</h2>
	</div> <!-- .block_head -->
	
	<div class="block_content">
		
		<table>
		  <tr>
		    <th>Name</th>
		    <th>Email</th>
		    <th>Phone</th>
		    <th>Address</th>
		    <th>Login</th>
		    <th>Status</th>
		    <th></th>
		    <th></th>
		  </tr>

		<% @people.each do |person| %>
		  <tr>
		    <td><%= link_to person.preferred_name, edit_person_path(person) %></td>
		    <td><%= mail_to person.email, person.email, :encode => "javascript" %></td>
		    <td><%= number_to_phone person.phone, :area_code => true %></td>
		    <td><%= person.address %></td>
		    <td><%= person.loginid %></td>
		    <td><% if person.status == true %>
					Active
				<% elsif %>
					Inactive
				<% end %>
			</td>
		    <td><%= link_to 'Show', person %></td>
		    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Person', new_person_path %>
		
	</div> <!-- .block_content -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div> <!-- .block -->
