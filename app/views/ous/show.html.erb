<% if notice %>
<div class="message success"><p><%= notice %></p></div>
<% end %>

<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>Organization: <%= @ou.name %></h2>
		
		<ul class="tabs">
			<li><a href="#">Overview</a></li>
			<li><%= link_to 'Edit', edit_ou_path(@ou) %></li>
		</ul>
	</div> <!-- .block_head -->
	
	<div class="block_content">
		<p>
		  <b>Name:</b>
		  <%= @ou.name %>
		</p>
		
		<p>
		  <b>Parent Organization:</b>
		  <% if @ou.parents.length > 0 %>
		    <%= @ou.parents[0].name %>
		  <% else %>
		    None
		  <% end %>
		</p>
		
		<% @ou.managers.each do |manager| %>
		<p>
		  <b>Manager:</b>
		  <%= manager.name %>
		</p>
		<% end %>
		
		<p>
  		<h2>Applications</h2>
  		<small><i>(Only applications specific to this OU appear here. Public applications are implied.)</i></small><br />
  		<br />
  		<ul>
		  <% @ou.applications.each do |application| %>
		    <li><%= link_to application.name, application %></li>
		  <% end %>
  		</ul>
		</p>
		
		<h2>Members</h2>
		<ul>
		  <% @ou.members.each do |member| %>
		    <li><%= link_to member.name, member %></li>
		  <% end %>
		</ul>
	</div> <!-- .block_content -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div> <!-- .block -->
