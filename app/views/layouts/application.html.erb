<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
	<title>Rights Management</title>

  <%= stylesheet_link_tag "application" %>
	<%= csrf_meta_tag %>
</head>
<body>
  <%= content_for :javascript do -%>
    <script type="text/javascript">
      application.current_user_id = <%= current_user.id %>; // application, not applications
    </script>
  <% end %>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <%= link_to "Rights Management", root_url, :class => "brand" %>
        <div class="nav-collapse">
          <ul class="nav">
            <% _permitted_to? :index, :applications do %>
              <%= li_link_with_class({:title => 'Manage', :controller => 'applications', :action => 'index'}) %>
            <% end %>
          </ul>
          <% _has_role? :admin do %>
          <ul class="nav pull-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrate <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% unless session[:impersonate].nil? %>
                  <li><a href="#" id="admin-unimpersonate">Unimpersonate</a></li>
                <% else %>
                  <li><a href="#" id="admin-impersonate">Impersonate…</a></li>
                <% end %>
                <li><a href="#" id="admin-ip-whitelist">API Whitelist…</a></li>
                <li class="divider"></li>
                <li><a href="#" id="admin-about">About…</a></li>
              </ul>
              <%= li_link_with_class({:title => 'Log out', :controller => 'site', :action => 'logout'}) %>
            </li>
          </ul>
          <% end %>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->

  <div id="main-body" class="container-fluid">
	  <%= yield %>
  </div><!-- /.container-fluid -->

  <div id="status_bar" class="status-bar"></div>

  <%= javascript_include_tag "application" %>
  <%= yield :javascript %>
</body>
</html>
