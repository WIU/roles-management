<% if notice %>
<div class="message success"><p><%= notice %></p></div>
<% end %>

<div class="block">
	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
		
		<h2>Role <em><%= @role.name %></em> for <em><%= link_to @application.name, @application %></em></h2>
		
		<ul class="tabs">
			<li><a href="#">Overview</a></li>
			<li><%= link_to 'Edit', edit_application_role_path(@application, @role) %></li>
		</ul>
	</div> <!-- .block_head -->
	
	<div class="block_content">
		<p>
		  <b>Name:</b>
		  <%= @role.name %>
		</p>
		
		<h2>Members</h2>
		<p>
			<ul>
				<% @role.people.each do |person| %>
					<li><%= link_to person.name, person %></li>
				<% end %>
			</ul>
		</p>
	</div> <!-- .block_content -->
	
	<div class="bendl"></div>
	<div class="bendr"></div>
</div> <!-- .block -->
